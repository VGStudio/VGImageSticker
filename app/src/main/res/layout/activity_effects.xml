            style="@style/linnear_adjust">
            <TextView
                style="@style/text_adjust"
                android:text="@string/label_saturation"/>
            <SeekBar
                android:id="@+id/seekSaturation"
                android:max="256"
                android:progress="256"
                style="@style/seekbar_adjust" />/>
        </LinearLayout>

        <LinearLayout
