<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout android:orientation="horizontal" android:id="@+id/buttonlayout" android:background="@color/bar_bg" android:layout_width="fill_parent" android:layout_height="60.0dip" android:weightSum="100.0"
        tools:ignore="MissingConstraints">
        <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="25.0">
            <ImageButton android:id="@+id/facebook" android:background="#03ffffff" android:layout_width="fill_parent" android:layout_height="50.0dip" android:src="@drawable/facebook" android:scaleType="centerInside" />
            <TextView android:textSize="10.0sp" android:textColor="@color/colourBgAndSelected" android:gravity="center" android:layout_width="fill_parent" android:layout_height="20.0dip" android:text="Facebook" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="25.0">
            <ImageButton android:id="@+id/instagram" android:background="#03ffffff" android:layout_width="fill_parent" android:layout_height="50.0dip" android:src="@drawable/instagram" android:scaleType="centerInside" />
            <TextView android:textSize="10.0sp" android:textColor="@color/colourBgAndSelected" android:gravity="center" android:layout_width="fill_parent" android:layout_height="20.0dip" android:text="Instagram" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="25.0">
            <ImageButton android:id="@+id/wallpaper" android:background="#03ffffff" android:layout_width="fill_parent" android:layout_height="50.0dip" android:src="@drawable/set_wallpaper" android:scaleType="centerInside" />
            <TextView android:textSize="10.0sp" android:textColor="@color/colourBgAndSelected" android:gravity="center" android:layout_width="fill_parent" android:layout_height="20.0dip" android:text="Wallpaper" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="25.0">
            <ImageButton android:id="@+id/multiple" android:background="#03ffffff" android:layout_width="fill_parent" android:layout_height="50.0dip" android:src="@drawable/share" android:scaleType="centerInside" />
            <TextView android:textSize="10.0sp" android:textColor="@color/colourBgAndSelected" android:gravity="center" android:layout_width="fill_parent" android:layout_height="20.0dip" android:text="Share" android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="7.0dip"
        card_view:cardElevation="7.0dip"
        card_view:cardUseCompatPadding="true">

        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/my_templateSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:gnt_template_type="@layout/gnt_medium_template_view" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="22sp"
            android:textColor="@color/colourBgAndSelected"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="More apps from Developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:fadeScrollbars="false"
            android:scrollbarSize="3.0dip"
            android:scrollbarThumbVertical="@color/colourBgAndSelected">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gifMoreAppSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#beede9ea"
                    android:src="@drawable/load_gif_1"
                    android:visibility="gone" />
                <GridLayout
                    android:id="@+id/gridSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"
                    android:padding="14dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>