<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="button_text">
        <item name="android:fontFamily">@font/proxima</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colourBgAndSelected</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="button_exit">
        <item name="android:layout_width">80.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="button_header">
        <item name="android:layout_width">60.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="text">
        <item name="android:background">#00ffffff</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">@color/colourBgAndSelected</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_adjust" parent="text">
        <item name="android:layout_width">60.0dip</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="text_header" parent="text">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_header_sticker" parent="text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="text_bottom_sticker" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">12.0sp</item>
    </style>

    <style name="bottom_image_sticker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_image_height</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="text_edit_action" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">16.0dip</item>
        <item name="android:textSize">12.0sp</item>
    </style>

    <style name="button_edit_action" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">18.0dip</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="seekbar_adjust">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="linnear_adjust">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="effect_bottom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70.0dip</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="effect_button_text" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12.0sp</item>
    </style>
</resources>
